       <% @groups.each do |group| %>

         <div class="page_wrapper">

           <div style="border-bottom: 1px solid lightgrey; padding-bottom: 0.5em">

                <h4 class="host"><%= group.party.user.name %></h4>
          	   	<h4 class="party"><%= group.party.title if group.party %></h4>
          	   	

          	   	<p class="date"><%= group.created_at.strftime("%B, %d, %Y") %></p>

      	   	  
               <h3><%= link_to("#{group.name}", {:action => 'show', :id => group.id, :party_id => @party.id}, :class => 'action show') %></h3>
              
         </div>
     	
    <% end %>

 
