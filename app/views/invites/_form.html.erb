
<%= form_for([@group, @invite, @group.invites.build({:group_id => @group.id, :host_id => @group.party.user_id })]) do |f| %>

 
<p>
   
    <%= f.hidden_field(:group_id, :value => @group.id) %>
</p>

<p>
   
    <%= f.hidden_field(:host_id, :value => @group.party.user_id) %>
</p>


<div class="form-group">

   
    
    	<%= f.label :guest_email %>

    	
   		 <%= f.email_field :email %>
 
   
</div><br>

 <div class="form-group">
    <%= f.submit 'Invite a Guest' %>
 </div>

<% end %>